        /* Layout & Formatting */
        .header-logo {
            text-align: center;
            margin-bottom: 20px;
        }
        .section-number {
            font-weight: bold;
            display: inline-block;
            width: 30px;
        }
        .indent {
            margin-left: 40px;
            text-indent: -20px;
        }

        /* --- FLEXBOX ADDITIONS --- */

        /* 1. Flexbox for Header (Example: Logo and Title on the same line) */
        .flex-header {
            display: flex;
            align-items: center; /* Vertically align items */
            justify-content: space-between; /* Space them out */
            border-bottom: 2px solid #ccc;
            padding-bottom: 10px;
        }
        .flex-logo {
            flex-shrink: 0; /* Prevents logo from shrinking */
        }
        .flex-title {
            flex-grow: 1; /* Allows title area to take up remaining space */
            text-align: right;
            font-size: 16pt;
            font-weight: bold;
        }

        /* 2. Flexbox for Signature Block */
        .signature-container {
            display: flex;
            justify-content: space-between; /* Push columns to the edges */
            margin-top: 50px;
        }
        .signature-block {
            width: 48%; /* Give each block a defined width */
            text-align: center;
        }
        .signature-line {
            border-bottom: 1px solid #000;
            padding-top: 30px;
            margin-bottom: 5px;
        }

        /* Table Styling */
        .summary-table {
            width: 80%;
            margin: 30px auto;
            border-collapse: collapse;
        }
        .summary-table th, .summary-table td {
            border: 1px solid #ccc;
            padding: 8px 12px;
            text-align: left;
        }
        .summary-table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
        .summary-table td.align-right {
            text-align: right;
        }

        /* PDF Specific Control */
        .page-break-after {
            page-break-after: always;
        }
        .footer {
            /* Kept as display: none if using @page rules */
            display: none;
        }
    </style>
</head>
<body>

